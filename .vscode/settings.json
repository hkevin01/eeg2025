{
  "// ====================================================================": "",
  "// VS CODE PERFORMANCE OPTIMIZATION FOR LARGE ML TRAINING": "",
  "// Prevents crashes/freezes during epoch processing": "",
  "// ====================================================================": "",
  
  "// === PYTHON LINTING: Disable heavy linters during training ===": "",
  "python.linting.enabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  
  "// === TYPE CHECKING: Disable Pylance intensive features ===": "",
  "python.analysis.typeCheckingMode": "off",
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.autoImportCompletions": false,
  "python.analysis.indexing": false,
  
  "// === AUTO SAVE: Reduce file watching overhead ===": "",
  "files.autoSave": "onFocusChange",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**/logs/**": true,
    "**/checkpoints/**": true,
    "**/outputs/**": true,
    "**/data/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/*.pyc": true
  },
  
  "// === FILE SEARCH: Exclude large directories ===": "",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.pyc": true
  },
  "search.exclude": {
    "**/logs": true,
    "**/checkpoints": true,
    "**/outputs": true,
    "**/data": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },
  
  "// === TERMINAL: Optimize output handling ===": "",
  "terminal.integrated.scrollback": 1000,
  "terminal.integrated.fastScrollSensitivity": 5,
  "terminal.integrated.gpuAcceleration": "off",
  
  "// === EDITOR: Reduce visual overhead ===": "",
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.lightbulb.enabled": "off",
  "editor.hover.delay": 1000,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  
  "// === GIT: Reduce git operations ===": "",
  "git.autorefresh": false,
  "git.autofetch": false,
  "git.enabled": true,
  
  "// === EXTENSIONS: Disable resource-intensive features ===": "",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  
  "// === TELEMETRY: Disable ===": "",
  "telemetry.telemetryLevel": "off",
  
  "// === PYTHON FORMATTING: Only on manual save ===": "",
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  
  "// === COPILOT: Reduce overhead ===": "",
  "github.copilot.editor.enableAutoCompletions": false,
  
  "// === FILE ASSOCIATIONS ===": "",
  "files.associations": {
    "*.log": "plaintext"
  }
}
